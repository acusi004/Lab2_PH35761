        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

    <Button
        android:id="@+id/btnbai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bai 1"
        >
    </Button>
    <Button
        android:id="@+id/btnbai2"
        android:layout_width="wrap_content"
